<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <gradient android:startColor="@color/pressed_button" android:endColor="@color/pressed_button"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4dp"/>
            <gradient android:startColor="@color/start_button" android:endColor="@color/end_button"/>
        </shape>
    </item>
</selector>